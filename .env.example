# StudyGenius Enterprise Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================
# APPLICATION SETTINGS
# ============================================
NODE_ENV=development
PORT=8000
CLIENT_PORT=3000
APP_NAME=StudyGenius Enterprise
APP_VERSION=1.0.0

# ============================================
# DATABASE CONFIGURATION
# ============================================
# PostgreSQL Database URL
DATABASE_URL=postgresql://username:password@localhost:5432/studygenius
DB_HOST=localhost
DB_PORT=5432
DB_NAME=studygenius
DB_USER=username
DB_PASSWORD=password

# Redis Configuration (for sessions and caching)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================
# AI SERVICES CONFIGURATION
# ============================================
# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here

# Anthropic Claude Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google AI Configuration
GOOGLE_AI_API_KEY=your_google_ai_api_key_here
GOOGLE_PROJECT_ID=your_google_project_id

# Hugging Face Configuration
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# ============================================
# AUTHENTICATION & SECURITY
# ============================================
# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_minimum_32_characters
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here
REFRESH_TOKEN_EXPIRES_IN=30d

# Session Configuration
SESSION_SECRET=your_session_secret_here_minimum_32_characters
SESSION_MAX_AGE=86400000

# Password Security
BCRYPT_ROUNDS=12

# ============================================
# OAUTH PROVIDERS
# ============================================
# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:8000/auth/google/callback

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Microsoft OAuth
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret

# Apple OAuth
APPLE_CLIENT_ID=your_apple_client_id
APPLE_CLIENT_SECRET=your_apple_client_secret

# ============================================
# EMAIL SERVICES
# ============================================
# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# SendGrid Configuration
SENDGRID_API_KEY=your_sendgrid_api_key

# Mailgun Configuration
MAILGUN_API_KEY=your_mailgun_api_key
MAILGUN_DOMAIN=your_mailgun_domain

# ============================================
# FILE STORAGE & CDN
# ============================================
# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=studygenius-files

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ============================================
# REAL-TIME COMMUNICATION
# ============================================
# Socket.IO Configuration
SOCKET_IO_CORS_ORIGIN=http://localhost:3000
SOCKET_IO_ADAPTER=redis

# WebRTC Configuration
WEBRTC_STUN_SERVERS=stun:stun.l.google.com:19302,stun:stun1.l.google.com:19302
WEBRTC_TURN_SERVERS=turn:your-turn-server.com:3478

# Agora.io Configuration (for video calling)
AGORA_APP_ID=your_agora_app_id
AGORA_APP_CERTIFICATE=your_agora_app_certificate

# ============================================
# PAYMENT PROCESSING
# ============================================
# Stripe Configuration
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal Configuration
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# ============================================
# ANALYTICS & MONITORING
# ============================================
# Google Analytics
GA_TRACKING_ID=UA-XXXXXXXXX-X
GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Mixpanel
MIXPANEL_TOKEN=your_mixpanel_token

# Sentry Error Tracking
SENTRY_DSN=your_sentry_dsn
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=your_sentry_project

# New Relic
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key
NEW_RELIC_APP_NAME=StudyGenius Enterprise

# ============================================
# EXTERNAL APIS
# ============================================
# Wikipedia API
WIKIPEDIA_API_URL=https://en.wikipedia.org/api/rest_v1

# News API
NEWS_API_KEY=your_news_api_key

# Unsplash API (for images)
UNSPLASH_ACCESS_KEY=your_unsplash_access_key

# Giphy API (for GIFs)
GIPHY_API_KEY=your_giphy_api_key

# ============================================
# RATE LIMITING & SECURITY
# ============================================
# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Security Headers
HELMET_CSP_ENABLED=true
HELMET_HSTS_ENABLED=true

# ============================================
# DEVELOPMENT & TESTING
# ============================================
# Debug Configuration
DEBUG=studygenius:*
LOG_LEVEL=info

# Test Database
TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/studygenius_test

# Mock Services in Development
MOCK_AI_SERVICES=false
MOCK_EMAIL_SERVICE=true
MOCK_PAYMENT_SERVICE=true

# ============================================
# FEATURE FLAGS
# ============================================
FEATURE_VIDEO_CALLING=true
FEATURE_AI_TUTORING=true
FEATURE_COLLABORATIVE_EDITING=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_MOBILE_APP_SUPPORT=true
FEATURE_OFFLINE_MODE=true
FEATURE_PREMIUM_FEATURES=true

# ============================================
# DEPLOYMENT CONFIGURATION
# ============================================
# Production URLs
PRODUCTION_CLIENT_URL=https://app.studygenius.com
PRODUCTION_SERVER_URL=https://api.studygenius.com

# Docker Configuration
DOCKER_REGISTRY=your-docker-registry.com
DOCKER_IMAGE_TAG=latest

# Kubernetes Configuration
K8S_NAMESPACE=studygenius
K8S_CLUSTER_NAME=studygenius-cluster